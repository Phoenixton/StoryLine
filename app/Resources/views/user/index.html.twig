{% extends 'base.html.twig' %}

{% block title %}List of users ADMIN{% endblock %}
{% block body %}
    <h1>Users list</h1>
    <div class="list_users">
        <table class ="table table-bordered table-stripped table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Password</th>
                <th>Stamina</th>
                <th>Last Login</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.password|slice(0,20) }} ...</td>
                    <td>{{ user.stamina }}</td>
                    <td>{{ user.lastconnect|date('Y-m-d H:i:s') }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('user_show', { 'id': user.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <button type="button" id="createUser" class="btn btn-lg btn-primary">Create a new user</button>

        <script type="text/javascript">
            document.getElementById("createUser").onclick = function () {
                location.href = "{{ path('user_new') }}";
            };
        </script>
    </div>
{% endblock %}
