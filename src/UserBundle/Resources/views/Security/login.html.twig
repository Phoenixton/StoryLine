{% extends 'base.html.twig' %}

{%  block body %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}


    <h2> To Login : </h2>
<form action="{{ path('login_check') }}" method="post">
    <label for="username">Username:</label>
    <input type="text" id="username" name="_username" autocomplete="off" class="form-control" style="margin-bottom: 15px" />

    <label for="password">Password:</label>
    <input type="password" id="password" name="_password" autocomplete="off" class="form-control" style="margin-bottom: 15px" />


    <button type="submit" class="btn btn-default">login</button>
</form>

{%  endblock %}