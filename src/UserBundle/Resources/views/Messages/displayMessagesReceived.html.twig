{% extends "::base.html.twig" %}

{% block title %}See your messages !{% endblock %}

{% block body %}

<div class="container">
    <div class="row">

        {% for ent in messages %}

            <div class="col panel panel-default">

                <div class="panel-heading">{{ ent.subject }} <div class="text-right"> To : <a href="/sendMessage/{{ent.sender.id}}">{{ ent.sender.username }}</a> on the : {{ ent.date|date('Y-m-d H:i:s') }}</div> </div>

                <div class="panel-body">
                    {{ ent.content }}
                </div>


            </div>

            {% endfor %}


    </div>

</div>


    <a href="/messagesSent" class="btn btn-primary"> See the messages you sent </a>

{% endblock %}